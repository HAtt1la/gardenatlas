{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "schedule": [
    "before 3am on Monday"
  ],
  "timezone": "UTC",
  "commitMessagePrefix": "chore(deps):",
  "prTitleTemplate": "chore(deps): update {{{depName}}} to {{{newVersion}}}",
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "matchPackagePatterns": ["^svelte$", "^@sveltejs/"],
      "groupName": "svelte monorepo",
      "automerge": false,
      "labels": ["svelte"]
    },
    {
      "matchPackagePatterns": ["^vite$", "^@vitejs/"],
      "groupName": "vite",
      "automerge": false,
      "labels": ["build-tools"]
    },
    {
      "matchPackagePatterns": ["^eslint", "eslint-plugin"],
      "groupName": "eslint ecosystem",
      "automerge": false,
      "labels": ["linting"]
    },
    {
      "matchPackagePatterns": ["dexie"],
      "automerge": false,
      "labels": ["database"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "prConcurrentLimit": 3,
  "prCreation": "not-pending",
  "separateMajorMinor": true,
  "separateMinorPatch": false
}
