{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "schedule": [
    "before 3am on Monday"
  ],
  "timezone": "UTC",
  "commitMessagePrefix": "chore(deps):",
  "packageRules": [
    {
      "matchDatasources": [
        "npm"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "svelte monorepo",
      "automerge": false,
      "labels": [
        "svelte"
      ],
      "matchPackageNames": [
        "/^svelte$/",
        "/^@sveltejs//"
      ]
    },
    {
      "groupName": "vite",
      "automerge": false,
      "labels": [
        "build-tools"
      ],
      "matchPackageNames": [
        "/^vite$/",
        "/^@vitejs//"
      ]
    },
    {
      "groupName": "eslint ecosystem",
      "automerge": false,
      "labels": [
        "linting"
      ],
      "matchPackageNames": [
        "/^eslint/",
        "/eslint-plugin/"
      ]
    },
    {
      "automerge": false,
      "labels": [
        "database"
      ],
      "matchPackageNames": [
        "/dexie/"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "prConcurrentLimit": 3,
  "prCreation": "not-pending",
  "separateMajorMinor": true,
  "separateMinorPatch": false
}
